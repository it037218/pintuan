@import 'weui.wxss';
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.groupNum1 {
  font-size: 26rpx;
  display: block;
  text-align: center;
  margin-top: 20rpx;
}

.show-rules {
  margin-top: 20rpx;
}

.show-rules-title {
  height: 80rpx;
  background-color: #f5fbfd;
  line-height: 80rpx;
  padding-left: 45rpx;
  font-size: 30rpx;
  color: #434343;
}

.show-rules .icon {
  display: block;
  float: right;
  width: 40rpx;
  height: 40rpx;
  background: url('https://pintuan.guangxing.club/wximg/down.png') no-repeat;
  background-size: contain;
  margin-top: 20rpx;
  margin-right: 45rpx;
}

.icon_down_rotate .icon {
  transform: rotate(180deg);
  transition: transform 0.3s;
}

.show-rules-content {
  display: none;
}

.showRuleContentOn {
  font-size: 26rpx;
  display: block;
  padding: 45rpx;
}

.show-details {
  margin-top: 15rpx;
  font-size: 30rpx;
  color: #434343;
  padding: 45rpx;
  background-color: #f5f9eb;
  margin-bottom:  55rpx;
}
.option-content{
  position: fixed;
  width: 100%;
  bottom: 20rpx;
  overflow: hidden;
}
.option-content .status2 {
  display: flex;
  justify-content: space-around;
}

.option-content .status2 view {
  width: 330rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
}

.option-content .status2 view:nth-child(1) {
  background-color: #e4e5e6;
  color: #747576;
}

.option-content .status2 view:nth-child(2) {
  color: #fff;
  background-color: #ed3a3e;
}

.option-content .status0 view {
  width: 690rpx;
  margin: 0 auto;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background-color: #e94f4f;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.option-content .status1 {
  box-sizing: border-box;
  padding: 0;
}

.option-content .status1 {
  width: 690rpx;
  margin: 0 auto;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background-color: #fabd3f;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  overflow: hidden;
  display: flex;
  justify-content:center;
}
.option-content .status1 view{
  height: 100%;
}
.option-content .status1 .clock {
  background: url('data:image/png;base64,') no-repeat;
  width: 40rpx;
  height: 100%;
  background-size: 40rpx 40rpx;
  background-position: center;
  box-sizing: border-box;
  display: inline-block;
  margin-right: 10rpx;


}

.option-content .status1 .count-down {
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  margin-left: 20rpx;
}


