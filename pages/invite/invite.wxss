/* pages/invite/invite.wxss */
page{
  background-color: #fff;
}
swiper{
  width: 720rpx;
  height: 350rpx;
  margin: 0 auto;
  border-radius: 5rpx;
  overflow: hidden;
  box-shadow: 0 0 5rpx 5rpx #ccc;
  margin-bottom: 43rpx;
}
swiper image{
  width: 100%;
}
.title{
  width: 650rpx;
  margin-left:50rpx;
  text-align: left;
  word-wrap:break-word;
  overflow: hidden;
  font-weight: bold;
  font-size: 40rpx;
}
.title .special-text{
  float: left;
  background-color: #e64a4a;
  color: #fff;
  padding: 0 25rpx;
  margin-right: 20rpx;
}
.desc{
  padding: 0 50rpx;
  font-size: 30rpx;
  color: #aaa;
  margin-top: 33rpx;
  line-height: 40rpx;
}
.price-content{
  padding: 0 50rpx;
  overflow: hidden;
}
.price-content text{
  height: 60rpx;
  display:table-cell;   

  vertical-align:bottom;
}
.price-content text:nth-child(1){
  float: left;
  font-size: 48rpx;
  color: #f43530;
  font-weight: bold;
}
.price-content text:nth-child(2){
  float: left;
  font-size: 24rpx;
  color: #f43530
}
.price-content text:nth-child(3){
  float: left;
  font-size: 28rpx;
  color: #898989;
  text-decoration:line-through;
}
.price-content text:nth-child(4){
  float: right;
  font-size: 28rpx;
  color: #898989
}

/*订单状态*/
.status0 view{
  width: 690rpx;
  margin: 0 auto;
  text-align:center;
  color: #fff;
  font-size: 36rpx;
  background-color: #e94f4f;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  overflow: hidden
}
.status1{
  box-sizing: border-box;
  padding: 0;
}
.status1>view{
   width: 690rpx;
  margin: 0 auto;
  text-align:center;
  color: #fff;
  font-size: 36rpx;
  background-color: #FABD3F;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  overflow: hidden
}
.status1>view .clock{
  background: url('data:image/png;base64,') no-repeat;
  width: 40rpx;
   /* height: 88rpx;  */
   /* background-size: cover; */
   background-position: center;
  box-sizing: border-box; 
   display: inline-block; 
}
.status2{
  display: flex;
  justify-content: space-around;
}
.status2 view{
  width: 330rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
}
.status2 view:nth-child(1){
  background-color: #E4E5E6;
  color: #747576;
}
.status2 view:nth-child(2){
  color: #fff;
  background-color: #ED3A3E
}
