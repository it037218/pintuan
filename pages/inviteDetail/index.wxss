/* pages/inviteDetail/index.wxss */

page {
  position: relative;
}

.detail1-content {
  width: 720rpx;
  height: 350rpx;
  box-shadow: 0px 6rpx 18rpx 0rpx rgba(47, 48, 48, 0.18);
  margin: 11rpx auto;
  display: flex;
  justify-content: center;
}

.detail1-content .product_img {
  width: 310rpx;
}

.detail1-content .product_img image {
  width: 250rpx;
  height: 250rpx;
  margin-top: 50rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.groupNum {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  left: 0;
  top: 0;
  overflow: hidden;
}

.groupNum>view {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.groupNum>view view {
  position: absolute;
  /* width: 200%;  */
  width: 150%;
  top: 35rpx;
  left: -65rpx;
  transform-origin: center;
  transform: rotate(-45deg);
  background-color: #f13838;
  color: #fff;
  text-align: center;
}

.title {
  margin-top: 50rpx;
  font-size: 36rpx;
  font-weight: normal;
  line-height: 48rpx;
}

.desc {
  font-size: 30rpx;
  line-height: 40rpx;
  letter-spacing: 0px;
  color: #aaa;
  margin-top: 20rpx;
}

.price {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.sale_price {
  color: #f43530;
  font-size: 24rpx;
}

.sale_price .sale_price_num {
  font-size: 48rpx;
  font-weight: bold;
}

.origin_price {
  font-size: 30rpx;
  color: #a0a0a0;
  line-height: 96rpx;
  text-decoration: line-through;
}

.order_content {
  padding-top: 43rpx;
}

.order_content .status0 {
  text-align: center;
}

.order_content .status0 .status-desc {
  color: #ffbe00;
  font-size: 40rpx;
}

.order_content .status0 .left-time {
  display: flex;
  justify-content: center;
  margin-top: 45rpx;
  font-size: 24rpx;
}

.member_content {
  display: flex;
  justify-content: flex-start;
  margin-top: 17rpx;
}

.member_content >view {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  /* overflow: hidden; */
  position: relative;
  margin-left: 40rpx;
}

.member_content >view image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow:  hidden;
}

.member_content>view:nth-child(1) .shenfen {
  display: block;
  color: #fff;
  background-color: #ef3a3f;
  font-size: 18rpx;
  position: absolute;
  bottom: -5rpx;
  width: 80rpx;
  text-align: center;
  left: 50%;
  margin-left: -40rpx;
  border-radius: 10rpx;
  height: 25rpx;
  line-height: 25rpx;
}

.member_content>view .shenfen {
  display: block;
  color: #fff;
  background-color: #2bb62f;
  font-size: 18rpx;
  position: absolute;
  bottom: -5rpx;
  width: 80rpx;
  text-align: center;
  left: 50%;
  margin-left: -40rpx;
  border-radius: 10rpx;
  height: 25rpx;
  line-height: 25rpx;
}

