/* pages/invite/invite.wxss */

page {
  background-color: #fff;
}

.cover_img {
  width: 720rpx;
  height: 350rpx;
  margin: 0 auto;
  border-radius: 5rpx;
  overflow: hidden;
  box-shadow: 0 0 5rpx 5rpx #eee;
  margin-bottom: 43rpx;
  margin-top: 10rpx;
}

swiper image {
  width: 100%;
}

.title {
  width: 650rpx;
  margin-left: 50rpx;
  text-align: left;
  word-wrap: break-word;
  overflow: hidden;
  font-weight: bold;
  font-size: 40rpx;
}

.title .special-text {
  float: left;
  background-color: #e64a4a;
  color: #fff;
  padding: 0 25rpx;
  margin-right: 20rpx;
}

.desc {
  padding: 0 50rpx;
  font-size: 30rpx;
  color: #aaa;
  margin-top: 33rpx;
  line-height: 40rpx;
}

.price-content {
  padding: 0 50rpx;
  overflow: hidden;
}

.price-content text {
  height: 60rpx;
  display: table-cell;
  vertical-align: bottom;
  line-height: 60rpx;
}

.price-content text:nth-child(1) {
  float: left;
  font-size: 48rpx;
  color: #f43530;
  font-weight: bold;
}

.price-content text:nth-child(2) {
  float: left;
  font-size: 24rpx;
  color: #f43530;
}

.price-content text:nth-child(3) {
  float: left;
  font-size: 28rpx;
  color: #898989;
  text-decoration: line-through;
}

.price-content text:nth-child(4) {
  float: right;
  font-size: 28rpx;
  color: #898989;
}
.share-content .already-full{
    background-color: #fff;
    width: 620rpx;
    height: 460rpx;
    border-radius: 8rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -310rpx;
    margin-top: -230rpx;
}
.already-full .notice-text{
    text-align: center;
    font-size: 40rpx;
    line-height: 70rpx;
}
.already-full button{
    /* width: 450rpx; */
	height: 88rpx;
	background-color: #e94f4f;
	border-radius: 10rpx;
	/* border: solid 2rpx #d64949; */
    margin-top:25rpx;
    color: #fff;
    border:none;
}
.already-full .button-list{
    display: flex;
    justify-content: center;
}
.share-content{
  position: fixed;
  width: 750rpx;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.4);
    z-index: 1001;

}